output:
  - platform: ledc
    pin: GPIO27
    id: backlight
                 
#SPI ZA RC522
spi:
  clk_pin: GPIO14 # SCK on this board
  mosi_pin: GPIO13 # MOSI (misspelt MOIS)
  miso_pin: GPIO12 # MISO

rc522_spi:
  cs_pin: GPIO15 # SDA on this board I reckon (no idea why -- I suspect they just change a jumper for I2C board)
  #reset_pin: GPIO16 # RST
  on_tag:
    then:
      - homeassistant.tag_scanned: !lambda 'return x;'
      #izprashta tekstov sensor s posledno skaniran tag           
      - text_sensor.template.publish:
          id: rfid_tag
          state: !lambda 'return x;'
      #pri skanirane usilva podsvetkata na 100% za 10sec, sled tova q vuzstanovqva          
      - output.turn_on: backlight
      - output.set_level:
            id: backlight
            level: 100%
      - delay: 10s
      - output.set_level:
            id: backlight
            level: !lambda |-
              return atoi(id(display_backlight).state.c_str()) / 100.0;
      - light.toggle: greenled

#Relay Push
switch:
  - platform: gpio
    pin: GPIO17 # GPIO16 pin
    restore_mode: ALWAYS_OFF
    inverted: true
    id: door_lock
    name: "Door lock"
    icon: "mdi:lock-outline"
    on_turn_on:
    - delay: 200ms
    - switch.turn_off: door_lock

            
            
      
binary_sensor:
  - platform: rc522
    uid: 73-F5-C5-0C
    name: "RC522 RFID Tag"
    id: TAG
  - platform: rc522    
    uid: E3-7B-C0-1C
    name: "RC522 RFID CARD"
    id: CARD
  # Door Magnetic Sensor    
  - platform: gpio
    pin:
      number: 33
      mode:
        input: true
        pullup: true
    name: "Front Door"
    id: frontdoor
    device_class: door
  - platform: homeassistant    
    id: backlight_on
    entity_id: input_boolean.lcd_display_backlight_on
    internal: true  

